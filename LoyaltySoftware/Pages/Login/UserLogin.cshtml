@page
@model LoyaltySoftware.Pages.Login.UserLoginModel
@{ }

<h1> Login Portal</h1>
<br/>
<div class="row">
 <div class="col-md-4">
     <form method="post">

         <div class="form-group">
             <label class="control-label">Username</label>
             <input type="text" asp-for="UserAccount.username" class="form-control" />
             <p style="color: red">@Model.Message1</p>
         </div>

         <div class="form-group">
          <label asp-for="UserAccount.password" class="control-label">Password</label>
          <input asp-for="UserAccount.password" type="password" class="form-control" />
          <p style="color: red">@Model.Message2</p>
         </div>

         <p><a asp-page="/Member/ForgotPassword">Forgotten Your Password?</a></p>

         <div>
             <input type="submit" value="Login" class="btn btn-primary" />
         </div>

     </form>
 </div>
</div>

